<div class="well">
	<h2 class="tab-title"><span class="fa fa-users"></span> Authenticated Users Online Now ({{ drupalInfo.usersOnline|length }})</h2>
</div>

<div class="clearfix"></div>

<hr class="site-commander-hr" />

<div class="row">
	<div class="col-md-12">
		<table class="table table-striped" id="table-users-online">
		<tr>
			<th></th>
			<th>Username</th>
			<th>Name</th>
			<th>Email Address</th>
			<th>Last Accessed</th>
		</tr>
		<tbody>
		{% for u in drupalInfo.usersOnline %}
			<tr>
				<td><img class="users-online-avatar sc-img-rounded" src="{{ file_url(u.user_picture.entity.uri.value) }}"></td>
				<td>{{ u.name.value }}</td>
				<td>{{ u.field_first_name.value }} {{ u.field_last_name.value }}</td>
				<td>{{ u.mail.value }}</td>
				<td>{{ u.accessElapsedTime }}</td>
			</tr>
		{% endfor %}
		</tbody>
		</table>
	</div>
</div>
